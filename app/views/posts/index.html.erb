<p id="notice"><%= notice %></p>
<div class="row">
<div class="column two-thirds">
<h1><span class="fa fa-bolt"></span> The Bathroom Wall <span class="fa fa-bolt"></span></h1>
</div>
<div class="column one-third">
<%= link_to 'New Post', new_post_path, :class => 'button button-primary' %>
</div>
</div>


<table class="u-full-width">
  <thead>
    <tr>
      <th>Anonymous Scribblings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h3><%= post.title %></h3>
            <p><small><%= post.tags %></small></p>
            <p><%= post.body %></p>
        <p><%= link_to 'Show', post, :class => 'button' %>
        <%= link_to 'Edit', edit_post_path(post), :class => 'button' %>
        <%= link_to 'Destroy', post, :class => 'button', method: :delete, data: { confirm: 'Are you sure?' } %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

