<p id="notice"><%= notice %></p>

<h1><i class='fa fa-bolt'></i> Listing Posts</h1>

<table class="u-full-width">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.tags %></td>
        <td><%= link_to 'Show', post, :class => 'button' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'button' %></td>
        <td><%= link_to 'Destroy', post, :class => 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, :class => 'button button-primary' %>
