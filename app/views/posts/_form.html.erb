<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <small>50 character limit</small><br>
    <%= f.text_field :title, :maxlength => 50, size: '60x1' %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <small>500 character limit</small><br>
    <%= f.text_area :body, :maxlength => 500, size: '80x100' %>
  </div>
  <div class="field">
    <%= f.label :tags %><br>
    <%= f.text_field :tags, :maxlength => 75, size: '60x1' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'button button-primary' %>
  </div>
<% end %>
